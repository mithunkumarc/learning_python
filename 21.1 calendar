# get month names from calendar
import calendar
for name in calendar.month_name:
    print(name)
    
#output :
# January
# February
# March
# April
# May
# June
# July
# August
# September
# October
# November
# December


*************************************************************************************************


# get day names from calendar
import calendar
for name in calendar.day_name:
    print(name)

#output :
# Monday
# Tuesday
# Wednesday
# Thursday
# Friday
# Saturday
# Sunday


*************************************************************************************************

# get dates of a month from calendar
import calendar
c = calendar.TextCalendar(calendar.SUNDAY)
for date in c.itermonthdates(2018,8):
    print(date)

#output :
# 2018-07-29
# 2018-07-30
# 2018-07-31

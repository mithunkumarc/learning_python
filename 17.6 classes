#adding attribute to class from outside, can be an example of monkey patching


class Car:
    pass

c = Car()
c.__setattr__('color','white')
print(c.__getattribute__('color'))
c.__setattr__('start',lambda :print('starting'))    #lambda with no parameter


def sq(x):
    return x*x

c.__setattr__('square',lambda x:sq(x))    #call function after declaring,


print(c.square(5))
c.start()

******************************************************************************************************

static method

class Animal:
    @staticmethod
    def zoo_name():
        return 'mysore zoo'


print(Animal.zoo_name())

*****************************************************************************

class Student:
    school_name = "kendriya vidyalaya" #staic variable
    def __init__(self,name):
        self.name = name

    @staticmethod
    def what_is_my_shool_name(self,sn):
        print(f"school name of {self.name} is {sn}")




s1 = Student("kaushal")
s2 = Student("vinay")
Student.school_name = "kendriya vidyalaya, Amritsar"
Student.what_is_my_shool_name(s1,Student.school_name)
Student.what_is_my_shool_name(s2,Student.school_name)
